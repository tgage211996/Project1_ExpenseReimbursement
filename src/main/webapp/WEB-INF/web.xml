<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserInformationServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.UserHelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogOutServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.LogOutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SubmitReimbursementServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.SubmitReimbursementServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewPenReimServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.ViewPenReimServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewResReimServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.ViewResReimServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserInfoServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.UserInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AllPendERServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.AllPendERServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>allResERServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.allResERServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllEmpServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.GetAllEmpServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllEmpReims</servlet-name>
    <servlet-class>com.ex.webapp.servlets.GetAllEmpReims</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateEmpInfoServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.UpdateEmpInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>approveDenyReimbursementServlet</servlet-name>
    <servlet-class>com.ex.webapp.servlets.approveDenyReimbursementServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>approveDenyReimbursementServlet</servlet-name>
    <url-pattern>/aprdnyrem</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateEmpInfoServlet</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllEmpReims</servlet-name>
    <url-pattern>/aer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserInformationServlet</servlet-name>
    <url-pattern>/Welcome</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogOutServlet</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SubmitReimbursementServlet</servlet-name>
    <url-pattern>/ReimbursementSub</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewPenReimServlet</servlet-name>
    <url-pattern>/pendingReim</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewResReimServlet</servlet-name>
    <url-pattern>/resolvedReim</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserInfoServlet</servlet-name>
    <url-pattern>/info</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AllPendERServlet</servlet-name>
    <url-pattern>/allpending</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>allResERServlet</servlet-name>
    <url-pattern>/allresolved</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllEmpServlet</servlet-name>
    <url-pattern>/allEmp</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>log4j-config-location</param-name>
    <param-value>WEB-INF/log4j2.properties</param-value>
  </context-param>
</web-app>
